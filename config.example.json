{
    "matrix": {
        "width": 64,
        "height": 32,
        "brightness": 100
    },
    "display": {
        "enabled": true,
        "display_durations": {
            "clock": 15,
            "weather": 15,
            "stocks": 45,
            "calendar": 30,
            "stock_news": 30
        }
    },
    "clock": {
        "enabled": true,
        "format": "%I:%M:%S %p"
    },
    "weather": {
        "enabled": true,
        "api_key": "your_openweather_api_key",
        "update_interval": 300,
        "units": "imperial"
    },
    "location": {
        "lat": 0.0,
        "lon": 0.0,
        "city": "Your City"
    },
    "stocks": {
        "enabled": true,
        "symbols": ["AAPL", "GOOGL", "MSFT"],
        "update_interval": 300
    },
    "stock_news": {
        "enabled": true,
        "symbols": ["AAPL", "GOOGL", "MSFT"],
        "update_interval": 900,
        "max_headlines": 3
    },
    "calendar": {
        "enabled": true,
        "credentials_file": "credentials.json",
        "token_file": "token.pickle",
        "update_interval": 300,
        "max_events": 3,
        "calendars": ["primary"]
    },
    "mqtt": {
        "broker": "homeassistant.local",
        "port": 1883,
        "username": "your_mqtt_username",
        "password": "your_mqtt_password",
        "client_id": "led_matrix",
        "use_tls": false,
        "topics": [
            "homeassistant/sensor/#",
            "homeassistant/binary_sensor/#",
            "homeassistant/switch/#"
        ],
        "display": {
            "scroll_speed": 0.1,
            "message_timeout": 60,
            "max_messages": 5
        }
    }
} 